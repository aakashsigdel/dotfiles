{
  "XiteHook": {
    "prefix": "xite hook",
    "body": [
      "/* Dependencies",
      "================================================================== */",
      "import { useContext } from 'react'",
      "",
      "/* Theme",
      "================================================================== */",
      "import { ThemeContext } from '../../../styles/Theme.shared';",
      "",
      "/* Types",
      "================================================================== */",
      "import { CSSProperties } from 'styled-components'",
      "",
      "export interface ${TM_FILENAME/(use)(.*)\\..+$/$2/}Props {}",
      "",
      "interface Styles {",
      "  root: CSSProperties;",
      "}",
      "",
      "interface HookReturn extends ${TM_FILENAME/(use)(.*)\\..+$/$2/}Props {",
      "  styles: Styles;",
      "}",
      "",
      "/* ${TM_FILENAME/(.*)\\..+$/$1/}",
      "================================================================== */",
      "export function ${TM_FILENAME/(.*)\\..+$/$1/}(",
      "  props: ${TM_FILENAME/(use)(.*)\\..+$/$2/}Props",
      "): HookReturn {",
      "  const {",
      "    grid: { cellHeight, cellWidth },",
      "    text,",
      "  } = useContext(ThemeContext);",
      "",
      "  return {",
      "    ...props,",
      "    styles: _getStyles(),",
      "  };",
      "",
      "  function _getStyles(): Styles {",
      "    return {",
      "      root: {},",
      "    }",
      "  }",
      "}"
    ],
    "description": "xite hook for shared logic"
  },
  "XiteComponent": {
    "prefix": "xite componet",
    "body": [
      "/* Dependencies",
      "================================================================== */",
      "import React from 'react';",
      "import styled from 'styled-components';",
      "",
      "/* Hooks",
      "================================================================== */",
      "import {",
      "  ${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/}Props,",
      "  use${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/},",
      "} from '@xite/shared/components/${1:views}/${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/}/use${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/}';",
      "",
      "/* Styled Template",
      "================================================================== */",
      "const styledStyling = ({ styled }) => styled;",
      "",
      "/* Styled Components",
      "================================================================== */",
      "const ${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/}Root = styled('article')(styledStyling);",
      "",
      "/* ${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/} Component",
      "================================================================== */",
      "export const ${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/}: React.FC<${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/}Props> = props => {",
      "  const { styles } = use${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/}(props);",
      "  return <${TM_FILENAME/([a-zA-Z0-9_]*)\\..+$/$1/}Root styled={styles.root} />;",
      "};"
    ],
    "description": "xite component for shared logic"
  }
}
